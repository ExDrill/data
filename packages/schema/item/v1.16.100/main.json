{
	"$schema": "http://json-schema.org/draft-07/schema",
	"properties": {
		"minecraft:item": {
			"required": ["description"],
			"type": "object",
			"properties": {
				"description": {
					"$ref": "../description.json"
				},
				"components": {
					"allOf": [
						{
							"$ref": "../v1.10.0/components.json"
						},
						{
							"$ref": "./components.json"
						}
					]
				},
				"events": {
					"patternProperties": {
						".*": {
							"$ref": "./event.json"
						}
					}
				}
			},
			"additionalProperties": false
		}
	}
}
