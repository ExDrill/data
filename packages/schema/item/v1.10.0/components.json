{
	"$schema": "http://json-schema.org/draft-07/schema",
	"description": "Components allow for item functionality.",
	"properties": {
		"minecraft:use_duration": {
			"type": "number",
			"description": "How long to use before item is done being used."
		},
		"minecraft:max_stack_size": {
			"type": "number",
			"default": 64,
			"description": "The max stack size of the item."
		},
		"minecraft:max_damage": {
			"type": "number",
			"description": "Max damage item has, this is used like item max health."
		},
		"minecraft:hand_equipped": {
			"type": "boolean",
			"description": "Is this a hand equipped item."
		},
		"minecraft:stacked_by_data": {
			"type": "boolean",
			"description": "Stacked by data aux value or not."
		},
		"minecraft:foil": {
			"type": "boolean",
			"description": "Foil or enchantment glint on the item."
		},
		"minecraft:food": {
			"type": "object",
			"description": "When an item has a food component, it becomes edible to the player",
			"properties": {
				"nutrition": {
					"type": "integer",
					"description": "TODO"
				},
				"can_always_eat": {
					"type": "boolean",
					"description": "TODO"
				},
				"saturation_modifier": {
					"type": "string",
					"description": "TODO",
					"enum": [
						"poor",
						"low",
						"normal",
						"good",
						"max",
						"supernatural"
					]
				},
				"using_converts_to": {
					"type": "string",
					"description": "TODO"
				},
				"effects": {
					"type": "array",
					"description": "TODO",
					"items": {
						"$ref": "../general/legacyEffectDefinition.json"
					}
				},
				"remove_effects": {
					"type": "array",
					"description": "TODO",
					"items": {
						"$ref": "../../general/vanilla/effectName.json"
					}
				},
				"on_use_action": {
					"type": "string",
					"description": "TODO",
					"enum": [
						"chorus_teleport",
						"suspicious_stew_effect",
						"none"
					]
				},
				"on_use_range": {
					"type": "array",
					"description": "TODO",
					"maxItems": 3,
					"minItems": 3,
					"items": {
						"type": "number"
					}
				}
			}
		}
	}
}
