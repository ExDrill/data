{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "bridge.item",
	"title": "Item",
	"type": "object",
	"required": ["format_version", "minecraft:item"],

	"allOf": [
		{
			"properties": {
				"format_version": {
					"$ref": "../general/formatVersion.json"
				}
			}
		},
		{
			"if": {
				"properties": {
					"format_version": {
						"enum": [
							"1.8.0",
							"1.9.0",
							"1.10.0",
							"1.11.0",
							"1.12.0",
							"1.13.0",
							"1.14.0",
							"1.16.0"
						]
					}
				}
			},
			"then": {
				"$ref": "./v1.10.0/main.json"
			}
		},
		{
			"if": {
				"properties": { "format_version": { "const": "1.16.100" } }
			},
			"then": {
				"$ref": "./v1.16.100/main.json"
			}
		}
	]
}
