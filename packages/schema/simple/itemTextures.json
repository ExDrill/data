{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "bridge.itemTextures",
	"title": "Item Textures",
	"additionalProperties": false,
	"properties": {
		"resource_pack_name": {
			"type": "string"
		},
		"texture_name": {
			"const": "atlas.items"
		},
		"texture_data": {
			"patternProperties": {
				".*": {
					"properties": {
						"textures": {
							"anyOf": [
								{
									"type": "array",
									"items": {
										"type": "string"
									}
								},
								{
									"type": "string"
								}
							]
						}
					}
				}
			}
		}
	}
}
