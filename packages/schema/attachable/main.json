{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Attachable",
	"required": ["format_version", "minecraft:client_entity"],
	"additionalProperties": false,
	"$id": "bridge.attachable",
	"properties": {
		"format_version": {
			"$ref": "../general/formatVersion.json"
		},
		"minecraft:attachable": {
			"additionalProperties": false,
			"required": ["description"],
			"properties": {
				"description": {
					"required": [
						"texture",
						"geometry",
						"render_controllers",
						"identifier",
						"materials"
					],
					"additionalProperties": false,
					"properties": {
						"identifier": {
							"type": "string"
						},
						"item": {
							"propertyNames": {
								"$ref": "../general/vanilla/identifiers.json#/definitions/item_identifier"
							}
						},
						"materials": {
							"patternProperties": {
								".*": {
									"$ref": "./general.json#/materials"
								}
							}
						},
						"textures": {
							"patternProperties": {
								".*": {
									"type": "string"
								}
							}
						},
						"geometry": {
							"patternProperties": {
								".*": {
									"type": "string"
								}
							}
						},
						"scripts": {
							"additionalProperties": false,
							"properties": {
								"parent_setup": {
									"type": "string"
								},
								"pre_animation": {
									"type": "array",
									"items": {
										"type": "string"
									}
								}
							}
						},
						"render_controllers": {
							"type": "array",
							"items": {
								"type": "string"
							}
						}
					}
				}
			}
		}
	}
}
