{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "bridge.featureRule",
	"title": "Feature Rule",
	"additionalProperties": false,
	"required": ["format_version", "minecraft:feature_rules"],
	"properties": {
		"format_version": {
			"$ref": "../general/formatVersion.json"
		},
		"minecraft:feature_rules": {
			"additionalProperties": false,
			"properties": {
				"description": {
					"additionalProperties": false,
					"properties": {
						"identifier": {
							"type": "string"
						},
						"places_feature": {
							"type": "string"
						}
					}
				},
				"conditions": {
					"additionalProperties": false,
					"properties": {
						"placement_pass": {
							"type": "string",
							"enum": [
								"first_pass",
								"before_underground_pass",
								"underground_pass",
								"after_underground_pass",
								"before_surface_pass",
								"surface_pass",
								"after_surface_pass",
								"before_liquids_pass",
								"liquids_pass",
								"after_liquids_pass",
								"before_sky_pass",
								"sky_pass",
								"after_sky_pass",
								"final_pass"
							]
						},
						"minecraft:biome_filter": {
							"$ref": "../spawnRule/components.json#/properties/minecraft:biome_filter"
						}
					}
				},
				"distribution": {
					"additionalProperties": false,
					"properties": {
						"iterations": {
							"type": "integer"
						},
						"coordinate_eval_order": {
							"type": "string",
							"enum": [
								"first_pass",
								"before_underground_pass",
								"underground_pass",
								"after_underground_pass",
								"before_surface_pass",
								"surface_pass",
								"after_surface_pass",
								"before_liquids_pass",
								"liquids_pass",
								"after_liquids_pass",
								"before_sky_pass",
								"sky_pass",
								"after_sky_pass",
								"final_pass"
							]
						},
						"scatter_chance": {
							"$ref": "../feature/main.json#/properties/minecraft:scatter_feature/properties/scatter_chance"
						},
						"x": {
							"$ref": "../feature/main.json#/properties/minecraft:scatter_feature/properties/x"
						},
						"y": {
							"$ref": "../feature/main.json#/properties/minecraft:scatter_feature/properties/y"
						},
						"z": {
							"$ref": "../feature/main.json#/properties/minecraft:scatter_feature/properties/z"
						}
					}
				}
			}
		}
	}
}
