{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "bridge.serverAnimation",
	"properties": {
		"format_version": { "enum": ["1.10.0"] },
		"animations": {
			"patternProperties": {
				"^animation\\..+$": {
					"properties": {
						"animation_length": { "type": "number" },
						"loop": {
							"enum": [true, false, "hold_on_last_frame"]
						},
						"timeline": {
							"patternProperties": {
								"^\\d+(\\.\\d+)?$": {
									"type": "array",
									"items": {
										"type": "string"
									}
								}
							}
						}
					}
				}
			}
		}
	}
}
