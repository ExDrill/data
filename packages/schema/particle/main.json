{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "bridge.particle",
	"title": "Particle",
	"properties": {
		"format_version": {
			"$ref": "../general/formatVersion.json"
		},
		"particle_effect": {
			"additionalProperties": false,
			"properties": {
				"description": {
					"additionalProperties": false,
					"properties": {
						"identifier": {
							"type": "string"
						},
						"basic_render_parameters": {
							"additionalProperties": false,
							"properties": {
								"texture": {
									"type": "string"
								},
								"material": {
									"$ref": "./general.json#/definitions/materials"
								}
							}
						}
					}
				},
				"curves": {
					"patternProperties": {
						".*": {
							"properties": {
								"type": {
									"type": "string",
									"enum": ["linear", "bezier", "catmull_rom"]
								},
								"nodes": {
									"type": "array",
									"items": {
										"anyOf": [
											{
												"type": "number"
											},
											{
												"$ref": "./general.json#/definitions/variables"
											}
										]
									}
								},
								"input": {
									"type": "string"
								},
								"horizontal_range": {
									"anyOf": [
										{
											"type": "number"
										},
										{
											"type": "string"
										}
									]
								}
							}
						}
					}
				},
				"events": {
					"patternProperties": {
						".*": {
							"$ref": "./event.json"
						}
					}
				},
				"components": {
					"$ref": "./components.json"
				}
			}
		}
	}
}
