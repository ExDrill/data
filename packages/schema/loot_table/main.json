{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "bridge.loot_tables",
	"title": "Loot Table",
	"type": "object",
	"properties": {
		"pools": {
			"description": "Lists the loot pools for this loot table.",
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"conditions": {
						"$ref": "./conditions.json"
					},
					"tiers": {
						"type": "object",
						"properties": {
							"initial_range": {
								"type": "number"
							},
							"bonus_rolls": {
								"type": "integer"
							},
							"bonus_chance": {
								"type": "number"
							}
						}
					},
					"rolls": {
						"description": "How many times this pool will roll.",
						"anyOf": [
							{
								"type": "number"
							},
							{
								"type": "object",
								"additionalProperties": false,
								"properties": {
									"min": {
										"type": "number"
									},
									"max": {
										"type": "number"
									}
								}
							}
						]
					},
					"entries": {
						"type": "array",
						"description": "Lists the entries of the loot table to be chosen from.",
						"items": {
							"type": "object",
							"properties": {
								"type": {
									"type": "string",
									"enum": ["item", "loot_table", "empty"]
								}
								// TODO finish loot table schema
							}
						}
					}
				}
			}
		}
	}
}
