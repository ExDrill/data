{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "bridge.fogs",
	"additionalProperties": false,
	"title": "Fog",
	"required": ["format_version", "minecraft:fog_settings"],
	"properties": {
		"format_version": {
			"$ref": "../general/format_version.json"
		},
		"minecraft:fog_settings": {
			"type": "object",
			"properties": {
				"description": {
					"type": "object",
					"properties": {
						"identifier": {
							"type": "string"
						}
					}
				},
				"distance": {
					"type": "object",
					"properties": {
						"water": {
							"type": "object",
							"properties": {
								"fog_start": {
									"type": "number"
								},
								"fog_end": {
									"type": "number"
								},
								"fog_color": {
									"type": "string",
									"format": "hex",
									"default": "#FFFFFF"
								},
								"render_distance_types": {
									"type": "string",
									"enum": ["fixed", "render"]
								}
							}
						}
					}
				},
				"volumetric": {
					"type": "object",
					"description": "RTX is required for volumetric fogs.",
					"properties": {
						"media_coefficients": {},
						"density": {
							"type": "object",
							"properties": {
								"air": {
									"type": "object",
									"properties": {
										"max_density": {
											"type": "number"
										},
										"max_density_height": {
											"type": "number"
										},
										"zero_density_height": {
											"type": "number"
										},
										"uniform": {
											"type": "boolean"
										}
									}
								}
							}
						}
					}
				}
			}
		}
	}
}
